<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2C2B2B">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/rec_evento"
        android:text="adsadaddsada"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rec_responsable"
        app:layout_constraintHorizontal_weight="1.5"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:background="#fff"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/rec_responsable"
        android:text="adsadaddsada"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/rec_evento"
        app:layout_constraintEnd_toStartOf="@id/rec_ver"
        app:layout_constraintHorizontal_weight="2"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:background="#fff"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/rec_ver"
        android:text="adsadadd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/rec_responsable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:background="#fff"/>


</android.support.constraint.ConstraintLayout>